<div id="links">
  <a href="/pick">What Should I Watch Tonight?</a>
  <a href="/movies/new">Add a Movie to My List</a>
</div>

<h3 id="suggestions">What's on Your To-Watch List...</h3>

<% var unwatchedMovies = [] %>
<% for (var i=0; i<movies.length; i=i+1) { %>
  <% if (!movies[i].watched) { %>
    <%  unwatchedMovies.push(movies[i]) %>
<% } %>
<% } %>

<% for (var i=0; i<unwatchedMovies.length; i=i+2) { %>
    <div class="row">
      <div class="col s6">
        <div class="card movie-poster">
          <div class="card-image">
            <img src= "<%= unwatchedMovies[i].posterUrl%>">
          </div>
          <div class="card-content">
            <h5><%= unwatchedMovies[i].title %></h5>
            <h6>Genre: <%= unwatchedMovies[i].genre %></h6><hr>
            <form action="/movies/<%= unwatchedMovies[i]._id %>" method="post">
              <input type="submit" value="WATCHED!"/>
            </form>
          </div>
          </div>
        </div>
        <% if (unwatchedMovies[i+1]) { %>
        <div class="col s6">
          <div class="card movie-poster">
            <div class="card-image">
              <img src= "<%= unwatchedMovies[i+1].posterUrl%>">
            </div>
            <div class="card-content">
              <h5><%= unwatchedMovies[i+1].title %></h5>
              <h6>Genres: <%= unwatchedMovies[i+1].genre %></h6><hr>
              <form action="/movies/<%= unwatchedMovies[i+1]._id %>" method="post">
                <input type="submit" value="WATCHED!"/>
              </form>
            </div>
            </div>
          </div>
          <% } %>
      </div>
<% } %>
