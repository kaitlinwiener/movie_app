<h1>Welcome, <%=currentUser.username %>!</h1>

<a href="/pick">Pick a movie for me</a></br>
<a href="/movies/new">Add a movie to the list</a></br></br>

<h3>All Movies on your List</h3>

<% movies.forEach(function (movie, i) { %>
  <% if (!movie.watched) { %>
    <%= movie.title %></br>
    <%= movie.genre %></br>
    <form action="/movies/<%= movie._id %>" method="post">
      <input type="submit" value="WATCHED!"/>
    </form>
  </br></br>
  <% } %>
<% }) %>
