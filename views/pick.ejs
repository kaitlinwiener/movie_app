<h1 id="picker-heading">Survey says...</h1>

<% if (movie) { %>
<div class="row">
  <div class="col s10 offset-s1">
    <div class="card movie-poster">
      <div class="card-image">
        <img src= "<%=movie.posterUrl%>">
      </div>
      <div class="card-content">
        <h5><%= movie.title %></h5>
        <h6>Genre: <%= movie.genre %></h6><hr>
        <p><%= movie.plot %></p>
      </div>
        <div class="card-action">
          <form action="/movies/<%= movie._id %>" method="post">
            <input type="submit" class="submit btn waves-effect waves-ligh" value="YES!"/>
          </form>
          <a href="/pick" id="tryagain" class="submit btn waves-effect waves-light">Eh, not feeling this one</a>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <h1>You need to add more movies!</h1>
  <% } %>
<a href="/" class="btn-floating btn-med waves-effect waves-light back-button">Back</a>
