<div>
    <div class="row">
      <div class="col s10 offset-s1">
        <div class="card movie-poster">
          <div class="card-image">
            <img src= "<%=results.search[number].Poster%>">
          </div>
          <div class="card-content">
            <h5><%= movie.title %></h5>
            <h6>Genre: <%= movie.genres %></h6><hr>
            <p><%= movie.plot %></p>
          </div>
            <div class="card-action">
              <% if(results.search.length > number+1) { %>
                <a href="/movies/search/<%=searchTitle %>/<%=number+1%>" id="tryagain" class="submit btn waves-effect waves-light">Not this One</a>
                <% } else { %>
                <a href="/movies/new" id="tryagain" class="submit btn waves-effect waves-light">New Search</a>
                <% }%>
                <form id="submit-new-movie" class="createnew" action="/movies" method="post">
                     <input id="movietitle"
                            type="hidden"
                            value= "<%= movie.title %>"
                            class = "form-control"
                            name="movie[title]"/>
                     <input id = "moviegenre"
                            type = "hidden"
                            name="movie[genre]"
                            value="<%= movie.genres %>"
                            class = "form-control">
                      <input id="movieplot"
                             type="hidden"
                             value= "<%= movie.plot %>"
                             class = "form-control"
                             name="movie[plot]"/>
                      <input id = "moviegenre"
                             type = "hidden"
                             name="movie[posterUrl]"
                             value= "<%=results.search[number].Poster%>"
                             class = "form-control">
                   <br><br>
                   <div>
                     <input type="submit" value="ADD IT!" class="submit btn waves-effect waves-light"/></br></br>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
  <a href="/" class="btn-floating btn-med waves-effect waves-light back-button">Back</a>
</div>
